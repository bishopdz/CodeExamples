@model DanielBishop_CSCI3110_Project2_ProjectManager.Models.ViewModels.DeleteRoleVM
@using DanielBishop_CSCI3110_Project2_ProjectManager.Models.Entities
@{
    ViewData["Title"] = "DeleteRole";
}

<h1>DeleteRole</h1>

<h3>Are you sure you want to delete a Role?</h3>
<div>
    <h4>ProjectRole</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Project Name:
        </dt>
        <dd class="col-sm-10">
            @Model.Project.Name
        </dd>

        <dt class="col-sm-2">
            Employee Name:
        </dt>
        <dd class="col-sm-10">
            @Model.Person.FirstName @Model.Person.MiddleName @Model.Person.LastName
        </dd>

    </dl>
    <form asp-action="DeleteRoleConfirmed" asp-controller="ProjectRole">
        <input type="hidden" name="projectId" value="@Model.Project.Id" />
        <input type="hidden" name="personId" value="@Model.Person.Id" />
        <br />
        Role:
        <select name="roleId">
            @foreach (var projectRole in Model.ProjectRoles)
            {

                <option value="@projectRole.RoleId">@projectRole.Role.Name</option>

            }
        </select>
        <br />
        <br />
        <input type="submit" value="Delete" class="btn btn-danger" />

    </form>

</div>
<br/>
<a asp-action="Details" asp-controller="Project" asp-route-id="@Model.Project.Id" class="btn btn-primary">Back to Project Details</a>